{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"declaration": true,
		"resolveJsonModule": true
	},
	"exclude": ["artifacts"],
	"include": [
		"artifacts/**/*",
		"artifacts/**/*.json",
		"graph/**/*",
		"scripts/**/*",
		"tasks/**/*",
		"deploy/**/*",
		"classes/**/*",
		"test/**/*",
		"typechain/**/*",
		"types/**/*",
		"utils/**/*",
		"./hardhat.config.ts"
	],
	"files": ["./hardhat.config.ts"]
}
